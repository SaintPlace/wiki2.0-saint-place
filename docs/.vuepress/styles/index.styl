h1 {
    color: #8d3bb8;
}

h2, h3, h4, h5, h6 {
    color: #8d3bb8;
}

.page img {
    border: 1px dashed #eaecef;
    border-radius: 6px;
    padding: 10px;
}

.sidebar-heading {
    font-weight: normal !important;
}

.sidebar-group.is-sub-group > .sidebar-heading:not(.clickable) {
    opacity: 1 !important;
}

.sidebar-group.is-sub-group > .sidebar-heading {
    font-size: 1.1em !important;
}

.sidebar-group.is-sub-group > .sidebar-group-items > li > .sidebar-link.active {
    border-left: outset !important;
}